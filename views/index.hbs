<div class="container" id="login">
    <h1 id="heading">View User Data</h1>
    <div id="login-section">
      <p>Log in with your Napster account and this demo will display information about you.</p>
      <button class="btn btn-primary signin" id="btn-login">Login</button>
    </div>
    <div id="result"></div>
</div>

<script id="result-template" type="text/x-handlebars-template">
    <dl>
      <img src="{{avatar}}">
      <dt>User Name</dt>
      <dd>{{realName}}</dd>
      <dt>Display Name</dt>
      <dd>{{screenName}}</dd>
      <dt>Followers</dt>
      <dd>{{followerCount}}</dd>
      <dt>Profile</dt>
      <dd><a href="https://app.napster.com/members/{{screenName}}" target="_blank">https://app.napster.com/members/{{screenName}}</a></dd>
      <dt>Napster ID</dt>
      <dd>{{id}}</dd>
    </dl>
</script>

